<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.DeviceDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="DeviceId"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="36dp"
            android:text=":"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Id"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/c1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/OStype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OS Type"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dId" />

        <TextView
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text=":"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c1" />

        <TextView
            android:id="@+id/OSType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="OS type"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/c2"
            app:layout_constraintTop_toBottomOf="@+id/deviceId" />

        <TextView
            android:id="@+id/osversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OS Version"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OStype" />

        <TextView
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text=":"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/OSVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OS Version"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/c3"
            app:layout_constraintTop_toBottomOf="@id/OSType" />
        <TextView
            android:id="@+id/manu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/osversion" />

        <TextView
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text=":"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/c4"
            app:layout_constraintTop_toBottomOf="@id/OSVersion"/>
        <TextView
            android:id="@+id/phntype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Type"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manu" />

        <TextView
            android:id="@+id/c5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text=":"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/PhoneType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Type"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/c5"
            app:layout_constraintTop_toBottomOf="@id/Manufacturer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="Register"
            android:textAllCaps="false"

            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
</FrameLayout>